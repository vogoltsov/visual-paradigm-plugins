    <artifactId>visual-paradigm-devtools-plugin</artifactId>
    <packaging>jar</packaging>


    <profiles>
        <profile>
            <id>install</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
